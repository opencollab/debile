from debile.rebuild.core import db
from debile.rebuild.sources import Sources
import json
import sys

meta, spec = json.load(open(sys.argv[1], 'r'))

for meta in db.meta.find(meta):
    s = Sources(meta)
    print("%s/%s/%s:" % (s.dist, s.version, s.suite))
    entries = s.query(spec)
    for x in entries:
        print(" %s" % (x['Package']))
